<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
      "-//Hibernate/Hibernate Configuration DTD 5.3//EN"  
 "http://hibernate.sourceforge.net/hibernate-configuration-5.3.dtd">

<hibernate-configuration>
  <session-factory>
	<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/quickrescue</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    
    <property name="connection_pool_size">true</property>
    <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="hbdml.auto">create</property>
    <property name="hbm2ddl.auto">update</property>
    <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
    <property name="show_sql">true</property>
    
   	
	<mapping class="com.gr.quickrescue.entity.Address"/>
	<mapping class="com.gr.quickrescue.entity.Account"/>
	<mapping class="com.gr.quickrescue.entity.Contact"/>
	
  </session-factory>
</hibernate-configuration>